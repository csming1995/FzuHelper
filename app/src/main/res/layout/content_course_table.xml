<?xml version="1.0" encoding="utf-8"?>
<com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/course_table_myscrollview"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <ScrollView
        android:id="@+id/scroll_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="4dp">

            <!-- 最左边空白的格子 -->
            <TextView
                android:id="@+id/test_empty"
                style="@style/courseTableText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty" />

            <LinearLayout
                android:id="@+id/weekday_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- 星期一的格子 -->
                <LinearLayout
                    style="@style/courseTableText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/test_monday_course"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mon"
                        android:textColor="@color/weekend_bg" />

                    <TextView
                        android:id="@+id/course_table_date1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp" />
                </LinearLayout>


                <LinearLayout
                    style="@style/courseTableText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!-- 星期二的格子 -->
                    <TextView
                        android:id="@+id/test_tuesday_course"
                        style="@style/courseTableText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tue"
                        android:textColor="@color/weekend_bg" />

                    <TextView
                        android:id="@+id/course_table_date2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp" />
                </LinearLayout>
                <!-- 星期三的格子 -->
                <LinearLayout
                    style="@style/courseTableText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/test_monday_course"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/test_wednesday_course"
                        style="@style/courseTableText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:text="@string/wen"
                        android:textColor="@color/weekend_bg" />

                    <TextView
                        android:id="@+id/course_table_date3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- 星期四的格子 -->
                <LinearLayout
                    style="@style/courseTableText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/test_thursday_course"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/thu"
                        android:textColor="@color/weekend_bg" />

                    <TextView
                        android:id="@+id/course_table_date4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp" />
                </LinearLayout>
                <!-- 星期五的格子 -->
                <LinearLayout
                    style="@style/courseTableText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/test_friday_course"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fri"
                        android:textColor="@color/weekend_bg" />

                    <TextView
                        android:id="@+id/course_table_date5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- 星期六的格子 -->
                <LinearLayout
                    style="@style/courseTableText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/test_saturday_course"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sta"
                        android:textColor="@color/weekend_bg" />

                    <TextView
                        android:id="@+id/course_table_date6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- 星期天的格子 -->
                <LinearLayout
                    style="@style/courseTableText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/test_sunday_course"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sun"
                        android:textColor="@color/weekend_bg" />

                    <TextView
                        android:id="@+id/course_table_date7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>


            <!-- 课程表body部分 -->

            <!-- 课程信息 -->
            <RelativeLayout
                android:id="@+id/test_course_rl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/weekday_layout"></RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>