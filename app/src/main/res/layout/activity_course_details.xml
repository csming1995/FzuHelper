<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:clipToPadding="false"
    >

<!-- TITLE -->

<RelativeLayout
    android:id="@+id/rl_title"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:background="@color/Blue" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="56dp"
        android:gravity="center_vertical"
        android:text="大学英语"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        />
</RelativeLayout>

<ImageButton
    android:id="@+id/ib_close"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:padding="12dp"
    android:background="@drawable/back_button"
    />

<!-- CONTENT -->

<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="128dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" >

        <!-- PLACE -->

        <TextView
            android:id="@+id/text_location"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="教室"
            android:textColor="@color/colorGray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_toRightOf="@+id/text_location"
            android:gravity="center_vertical|right"
            android:text="东3-305"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
        <!-- TEACHER -->

        <TextView
            android:id="@+id/text_teacher"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="老师"
            android:textColor="@color/colorGray"
            android:textSize="18sp"
            android:layout_below="@+id/text_location"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_teacher"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical|right"
            android:text="东3-305"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:layout_below="@+id/tv_location"
            android:layout_alignParentEnd="true" />
        <!-- LESSON -->

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_below="@+id/text_teacher"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="节数"
            android:textColor="@color/colorGray"
            android:textSize="18sp" />

        <TextView

            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@+id/tv_teacher"
            android:layout_toRightOf="@+id/text_teacher"
            android:gravity="center_vertical|right"
            android:text="东3-305"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
        <!-- SCHEDULE -->

        <TextView
            android:id="@+id/text_week"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_below="@+id/text_time"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="周数"
            android:textColor="@color/colorGray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@+id/tv_time"
            android:layout_toRightOf="@+id/text_time"
            android:gravity="center_vertical|right"
            android:text="东3-305"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
        <!-- TYPE -->

        <TextView
            android:id="@+id/text_type"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_below="@+id/text_week"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="类型"
            android:textColor="@color/colorGray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@+id/text_week"
            android:layout_toRightOf="@+id/text_type"
            android:gravity="center_vertical|right"
            android:text="选修"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
        <!-- NOTE -->

        <!-- WISDOM -->
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
<!-- SHADOW -->

<include
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rl_title"
    layout="@layout/shadow_layout" />

</RelativeLayout>